							<tal:script replace="structure string:&lt;script type='text/javascript'&gt;" />
								$(document).ready(function() {
									dataMap = {
										legenda: {
											tipo: "sequencial",
											cor: "laranja",
											intervalo: <span tal:replace="view/getEscalaMapa"/>,
											numeroCores: 7,
